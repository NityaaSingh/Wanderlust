<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3>Edit Your Listing</h3>

    <form method="POST" action="/listings/<%=listing._id %>?_method=PUT">

      <!-- Title -->
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input 
          name="listing[title]" 
          placeholder="Add a catchy title" 
          type="text" 
          class="form-control"
          value="<%= listing.title %>"required
        >
      </div>

      <!-- Description -->
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <input 
          name="listing[description]" 
          placeholder="Enter description" 
          type="text" 
          class="form-control"
          value="<%= listing.description %>"
       required >
      </div>

      <!-- Image -->
      <div class="mb-3">
        <label for="image" class="form-label">Image Link</label>
        
        <% if (listing.image && listing.image.url) { %>
          <img src="<%= listing.image.url %>" alt="Listing Image" class="img-fluid mb-2" style="max-height: 200px;">
        <% } %>

        <input 
          name="listing[image][url]" 
          placeholder="Enter image URL" 
          type="text" 
          class="form-control"
          value="<%= listing.image ? listing.image.url : '' %>"
        >
      </div>

      <!-- Price + Country -->
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input 
            name="listing[price]" 
            placeholder="1200" 
            type="number" 
            class="form-control"
            value="<%= listing.price %>" required
          >
        </div>
        
        <div class="mb-3 col-8">
          <label for="country" class="form-label">Country</label>
          <input 
            name="listing[country]" 
            placeholder="India" 
            type="text" 
            class="form-control"
            value="<%= listing.country %>"required
          >
        </div>
      </div>

      <!-- Location -->
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input 
          name="listing[location]" 
          placeholder="Chhibramau" 
          type="text" 
          class="form-control"
          value="<%= listing.location %>"required
        >
      </div>

      <!-- Submit Button -->
      <button class="btn btn-dark edit-btn mt-3">EDIT</button>
    </form>
  </div>
</div>
